# Dockerfile for Agent Builder Platform Backend
# Future use - Docker deployment

FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
COPY packages/backend/package*.json ./packages/backend/
RUN npm install --workspace=packages/backend

# Copy source
COPY packages/backend ./packages/backend

# Build
WORKDIR /app/packages/backend
RUN npm run build

# Create data directory
RUN mkdir -p /app/packages/backend/data

# Expose port
EXPOSE 3001

# Start
CMD ["npm", "start"]
